rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Development/testing: allow all access when authenticated
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // Public rules for testing (remove in production)
    match /public/{document=**} {
      allow read, write;
    }
  }
}
