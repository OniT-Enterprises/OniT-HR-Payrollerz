# Meza API Configuration
PORT=3201

# API Key for OpenClaw plugin authentication
API_KEY=REPLACE_WITH_SECURE_RANDOM_KEY

# Tenant ID restriction — only this tenant can be queried
ALLOWED_TENANT_ID=REPLACE_WITH_YOUR_TENANT_ID

# Firebase Admin SDK — path to service account JSON
FIREBASE_SERVICE_ACCOUNT_PATH=./serviceAccountKey.json

# Alternative: inline Firebase credentials (if not using service account file)
# FIREBASE_PROJECT_ID=onit-hr-payroll
# FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@onit-hr-payroll.iam.gserviceaccount.com
# FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"

# OpenClaw Gateway (for in-app chat widget)
OPENCLAW_WS_URL=ws://127.0.0.1:18790
OPENCLAW_PASSWORD=REPLACE_WITH_OPENCLAW_GATEWAY_TOKEN
