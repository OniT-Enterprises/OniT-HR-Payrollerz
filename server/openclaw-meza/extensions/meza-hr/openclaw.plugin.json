{
  "id": "meza-hr",
  "name": "Meza HR Management",
  "description": "HR/Payroll management tools for OniT Meza system - query employees, payroll, leave, interviews, and financials",
  "version": "1.0.0",
  "configSchema": {
    "type": "object",
    "properties": {
      "apiBaseUrl": {
        "type": "string",
        "default": "http://127.0.0.1:3201",
        "description": "Base URL of the Meza HR API"
      },
      "apiKey": {
        "type": "string",
        "description": "API key for authentication"
      },
      "defaultTenantId": {
        "type": "string",
        "description": "Default tenant ID to use for operations"
      }
    },
    "required": ["apiKey", "defaultTenantId"]
  },
  "uiHints": {
    "apiKey": {
      "label": "Meza API Key",
      "sensitive": true,
      "placeholder": "Enter your Meza API key"
    },
    "apiBaseUrl": {
      "label": "API Base URL",
      "placeholder": "http://127.0.0.1:3200"
    },
    "defaultTenantId": {
      "label": "Default Tenant ID",
      "placeholder": "your-tenant-id"
    }
  }
}
